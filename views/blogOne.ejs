<div class="row">
  <div class="twelve columns">
    <h3>{{= title }}</h3>
    {{- content }}
    <p></p>
    <p><a href='/blog/edit/{{= url }}' class="button">Edit</a></p>  
  </div>
  <div class="two columns">
    <b>Posted on:</b><br>
    {{= postedOn.toDateString() }}<br>
    at {{= postedOn.toLocaleTimeString() }}
  </div>

  <div class="two columns">
    <b>Created on:</b><br>
    {{= createdOn.toDateString() }}<br>
    at {{= createdOn.toLocaleTimeString() }}
  </div>

  <div class="two columns">
    <b>Updated on:</b><br>
    {{= updatedOn.toDateString() }}<br>
    at {{= updatedOn.toLocaleTimeString() }}
  </div>
  <div class="six columns">
  </div>
</div>


