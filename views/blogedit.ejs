<h1>Blog</h1>
<p>{{= title }}</p>

<form name="input", action="/blog/edit/{{= url }}", method="post">
  <p>Title 
  <input type="text", name="title", value="{{= title }}" />
  </p>

  <p>Content 
  <textarea name='content', rows="20", cols="60">{{- content }}</textarea>
  </p>

  <p>Posted On 
  <input type="date", name="postedOn", value="{{= postedOn.toDateString() }}" />
  </p>

  <p>Posted At
  <input type="time", name="postedAt", value="{{= postedOn.toLocaleTimeString() }}" />
  </p>

  <input type="submit", value="Submit" />

  <input type="text", name="id", value="{{= id }}" />

  <a href='/blog/{{= url }}'>Cancel</a> 
</form>